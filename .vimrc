filetype on	"检测文件的类型
set autoindent	"vim使用自动对齐，也就是把当前行的对齐格式应用到下一行
set smartindent	"依据上面的对齐格式，智能的选择对齐方式
set tabstop=4	"设置tab键为4空格
set shiftwidth=4	"当行之间交错时使用4个空格
set showmatch	"设置匹配模式，类似当输入一个左括号时会匹配相应的那个右括号
set completeopt=longest,menu,preview	"ctrl+p，自动补全
set cursorline	"当前行有下划线
set nu	"显示行号
syntax on
set nobackup
set mouse=a
set mouse=v
set fileencodings=gb2312,utf-8
set termencoding=uft-8
